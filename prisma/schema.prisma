// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  SUPPORT
  POLICE
  FIREFIGHTER
  DELEGATE
  GOV
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  cpf       String   @unique
  phone     String?
  birthDate String?
  role      Role     @default(USER)
  riskLevel String?  // LOW, MEDIUM, HIGH

  // Account Lockout
  failedLoginAttempts Int       @default(0)
  lockoutUntil        DateTime?
  
  // Address fields
  cep          String?
  street       String?
  number       String?
  neighborhood String?
  city         String?
  state        String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  riskAssessments RiskAssessment[]
  reports         Report[]
  contacts        Contact[]
  notifications   Notification[]
  
  // Real-time features
  sentMessages     Message[] @relation("SentMessages")
  chats            Chat[]    @relation("UserChats")
  location         Location?
  refreshToken     RefreshToken?
  tokens           UserToken[]
}

model RefreshToken {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  token     String   @unique
  expiresIn Int
  createdAt DateTime @default(now())
}

model UserToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  expiresIn DateTime
  createdAt DateTime @default(now())
}

model Chat {
  id        String    @id @default(uuid())
  users     User[]    @relation("UserChats")
  messages  Message[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Message {
  id        String   @id @default(uuid())
  content   String
  chatId    String
  chat      Chat     @relation(fields: [chatId], references: [id])
  senderId  String
  sender    User     @relation("SentMessages", fields: [senderId], references: [id])
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Location {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  latitude  Float
  longitude Float
  updatedAt DateTime @updatedAt
}

model RiskAssessment {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  score     Int
  riskLevel String   // LOW, MEDIUM, HIGH
  answers   RiskAssessmentAnswer[]
  createdAt DateTime @default(now())
}

model Report {
  id          String   @id @default(uuid())
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
  type        String   // e.g., "PHYSICAL", "PSYCHOLOGICAL", "EMERGENCY"
  description String?
  latitude    Float?
  longitude   Float?
  status      String   @default("PENDING") // PENDING, PROCESSING, RESOLVED
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Contact {
  id       String @id @default(uuid())
  userId   String
  user     User   @relation(fields: [userId], references: [id])
  name     String
  number   String
  relation String? // e.g., "Mother", "Friend"
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  title     String
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model News {
  id        String   @id @default(uuid())
  title     String
  date      DateTime
  category  String   // "Legislação" | "Segurança" | "Comunidade" | "Todos"
  content   String
  imageUrl  String?
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RiskQuestion {
  id          String   @id @default(uuid())
  text        String
  description String?  // Para orientações extras (ex: "Caso não tenham filhos...")
  order       Int      // Para manter a ordem das 19 perguntas
  active      Boolean  @default(true)
  version     Int      @default(1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  answers     RiskAssessmentAnswer[]
}

model RiskAssessmentAnswer {
  id            String         @id @default(uuid())
  
  assessmentId  String
  assessment    RiskAssessment @relation(fields: [assessmentId], references: [id], onDelete: Cascade)
  
  questionId    String
  question      RiskQuestion   @relation(fields: [questionId], references: [id])
  questionVersion Int        @default(1)
  
  value         Int            // 0=Não, 1=Sim, 2=Não Sabe, 3=Não se Aplica
  
  createdAt     DateTime       @default(now())

  @@unique([assessmentId, questionId]) // Garante apenas 1 resposta por pergunta neste formulário
}